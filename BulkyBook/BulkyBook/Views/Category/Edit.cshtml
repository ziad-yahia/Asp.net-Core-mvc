@model Category

<form method="post" asp-action="Edit" asp-controller="Category">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Displayorder" class="form-label"></label>
                <input asp-for="Displayorder" class="form-control" />
                <span class="text-danger" asp-validation-for="Displayorder"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary"> Update</button>
                <a asp-action="Index" asp-controller="category" class="btn btn-secondary">Go Back To List</a>
            </div>
        </div>
    </div>


</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}