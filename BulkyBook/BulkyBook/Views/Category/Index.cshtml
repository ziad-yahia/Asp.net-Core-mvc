@model List<Category>



    <div class="container p-3">
        <div class="row pt-4">
           <div class="col-6">
               <h2 class="text-primary">Category List</h2>
           </div>
           <div class="col-6">
               <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;   Create New Category
               </a>
           </div>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered bg-dark table-striped w-100">
    <thead >
        <tr >
            <th class="text-light">Category Name</th>
            <th class="text-light">Display Order </th>
            <th class="text-light">Time Created</th>
            <th class="text-light">Actions</th>
        </tr>
    </thead>
    <tbody>
       
             @foreach (var item in Model)
             {
                <tr>
                    <th class="w-50 text-light">@item.Name</th>
                    <th class="w-20 text-light">@item.Displayorder</th>
                    <th class="w-20 text-light">@item.CreatedAt</th>
                <th class="w-25 text-light">    
                    <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.Id" asp-controller="category">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                     </a>
                     &nbsp;
                    <a class="btn btn-danger" id="Delete" asp-action="Delete" asp-route-id="@item.Id" asp-controller="category">
                        <i class="bi bi-trash"></i>
                        Delete
                    </a>
                </th>
                </tr>
              }
       
    </tbody>
</table>

