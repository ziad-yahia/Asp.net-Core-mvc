@model Student

<form method="post" asp-controller="Student" asp-action="Create" asp-route-id="@Model.ID">

    <div>
        <label for="Name">Student Name</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <div>
        <label for="Age">Student Age</label>
        <input type="text" id="Age" name="Age" value="@Model.Age" class="form-control" />
    </div>
    <div>
        <label for="Name">Student Department</label>
        <input type="text" id="Dept" name="Dept" value="@Model.Dept" class="form-control" />
    </div>
    <input type="submit" value="Submit" class="btn btn-primary" />
</form>